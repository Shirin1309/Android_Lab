<?xml version="1.0" encoding="UTF-8"?>

-<RelativeLayout tools:context=".MainActivity" android:background="#B2BEB5" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

<TextView android:layout_height="106dp" android:layout_width="match_parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintBottom_toBottomOf="parent" app:autoSizeTextType="uniform" android:textColor="#4267B2" android:text="META" android:gravity="center" android:fontFamily="sans-serif-black" android:id="@+id/meta"/>

<TextView android:layout_height="67dp" android:layout_width="match_parent" android:textColor="#000000" android:text="create a new account!!!" android:gravity="center" android:id="@+id/acc" android:textSize="30sp" android:layout_below="@+id/meta"/>

<EditText android:background="#4267B2" android:layout_height="50dp" android:layout_width="190dp" android:textColor="#ffff" android:text="First Name" android:id="@+id/fn" android:layout_below="@+id/acc" android:layout_marginTop="24dp" android:layout_marginLeft="20dp"/>

<EditText android:background="#4267B2" android:layout_height="50dp" android:layout_width="190dp" android:textColor="#ffff" android:text="last Name" android:id="@+id/ln" android:layout_below="@+id/acc" android:layout_marginTop="24dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_toRightOf="@+id/fn"/>

<EditText android:background="#4267B2" android:layout_height="50dp" android:layout_width="match_parent" android:textColor="#ffff" android:text="Mobile Number" android:id="@+id/ph" android:layout_below="@+id/fn" android:layout_marginTop="24dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>

<EditText android:background="#4267B2" android:layout_height="50dp" android:layout_width="match_parent" android:textColor="#ffff" android:text="New Password" android:id="@+id/pwd" android:layout_below="@+id/ph" android:layout_marginTop="24dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>

<TextView android:layout_height="100dp" android:layout_width="match_parent" android:textColor="#4267B2" android:text="Date of Birth" android:id="@+id/dob" android:textSize="30sp" android:layout_below="@+id/pwd" android:layout_marginTop="14dp" android:layout_marginLeft="30dp"/>

<Spinner android:background="#4267B2" android:layout_height="50dp" android:layout_width="80dp" android:textColor="#ffff" android:id="@+id/day" android:layout_below="@+id/dob" android:layout_marginTop="-44dp" android:layout_marginLeft="20dp" android:spinnerMode="dropdown" android:entries="Day"/>

<Spinner android:background="#4267B2" android:layout_height="50dp" android:layout_width="100dp" android:textColor="#ffff" android:id="@+id/mon" android:layout_below="@+id/dob" android:layout_marginTop="-44dp" android:layout_marginLeft="20dp" android:layout_toRightOf="@+id/day" android:spinnerMode="dropdown" android:entries="Month"/>

<Spinner android:background="#4267B2" android:layout_height="50dp" android:layout_width="90dp" android:textColor="#ffff" android:id="@+id/yr" android:layout_below="@+id/dob" android:layout_marginTop="-44dp" android:layout_marginLeft="20dp" android:layout_toRightOf="@+id/mon" android:spinnerMode="dropdown" android:entries="Year"/>

<TextView android:layout_height="100dp" android:layout_width="match_parent" android:textColor="#4267B2" android:text="Gender" android:id="@+id/gen" android:textSize="30sp" android:layout_below="@+id/day" android:layout_marginTop="14dp" android:layout_marginLeft="30dp"/>


-<RadioGroup android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/gend" android:layout_below="@+id/gen">

<RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#4267B2" android:text="Male" android:id="@+id/male" android:textSize="25sp" android:layout_below="@+id/gend" android:layout_marginTop="-39dp" android:layout_marginLeft="20dp"/>

<RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#4267B2" android:text="Female" android:id="@+id/female" android:textSize="25sp" android:layout_below="@+id/gen" android:layout_marginTop="-39dp" android:layout_marginLeft="20dp" android:layout_toRightOf="@+id/male"/>

<RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#4267B2" android:text="Others" android:id="@+id/others" android:textSize="25sp" android:layout_below="@+id/gen" android:layout_marginTop="-39dp" android:layout_marginLeft="20dp" android:layout_toRightOf="@+id/female"/>

</RadioGroup>

<Button android:background="#4267B2" android:layout_height="50dp" android:layout_width="match_parent" android:textColor="#ffff" android:text="Sign Up" android:id="@+id/sign" android:layout_below="@+id/gend" android:layout_marginTop="27dp" android:layout_marginLeft="40dp" android:layout_marginRight="40dp"/>

</RelativeLayout>
